<%-include ("partials/header") -%>
<h1>Home</h1>
<p><%=content %></p>
<% items.forEach(function(item){%>
<h2><%=item.title%></h2>
<% if(item.post.length<=100){ %>
<p><%=item.post%></p>
<%}else{%>
<p class="float"><%=item.post.slice(0,100)+' ...'%></p>
<a href=<%="/posts/"+item.url%>>Read More</a>
<%}%>
<%});%>

<%-include ("partials/footer") -%>


